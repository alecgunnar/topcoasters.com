<!DOCTYPE html>
<html>
  <head>
    <title>Top Coasters - Experience the Top Thrill!</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <meta name="viewport" content="width=device-width">
    <%= csrf_meta_tags %>
  </head>
  <body id="<%= controller_name %>">
    <% if notice %><div id="flash__message__container"><p id="flash__message--notice"><%= notice %></p></div><% end %>
    <%= render 'layouts/parts/header' %>
    <div class="wrapper">
      <main>
        <% if alert %><p id="flash__message--alert"><%= alert %></p><% end %>
        <%= yield :main %>
      </main>
      <%= render 'layouts/parts/footer' %>
    </div>
  </body>
</html>
