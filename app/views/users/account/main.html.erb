<div id="overview">
  <h2>Account Overview</h2>
  <div class="message">
    <% if current_user.gravatar_url %>
      <div class="overview__profile-pic">
        <%= image_tag current_user.gravatar_url %>
      </div>
    <% end %>
    <div class="overview__account-info">
      <p><strong>Username:</strong> <%= current_user.username %></p>
      <p><strong>Account Level:</strong> <%= current_user.level.name %></p>
      <p><strong>Member Since:</strong> <%= l current_user.created_at, format: :date %></p>
    </div>
    <div class="clear"></div>
  </div>
  <p class="message text--center"><%= link_to "Update my Track Record", root_path %></p>
</div>